<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <report
            id="action_report_double_holiday_13th_month"
            model="hr.payslip"
            string="Payslip Double Holidays / 13th Month"
            report_type="qweb-pdf"
            name="l10n_be_hr_payroll.report_double_holiday_13th_month"
            file="l10n_be_hr_payroll.report_double_holiday_13th_month"
            print_report_name="'Payslip - %s' % (object.employee_id.name)"
        />

        <report
            id="action_report_termination_fees"
            model="hr.payslip"
            string="Termination"
            report_type="qweb-pdf"
            name="l10n_be_hr_payroll.report_termination_fees"
            file="l10n_be_hr_payroll.report_termination_fees"
            print_report_name="'Termination - %s' % (object.employee_id.name)"
        />

        <report
            id="action_report_termination_holidays_n"
            model="hr.payslip"
            string="Termination Holidays Current Year"
            report_type="qweb-pdf"
            name="l10n_be_hr_payroll.report_termination_holidays_n"
            file="l10n_be_hr_payroll.report_termination_holidays"
            print_report_name="'Termination Holidays N - %s' % (object.employee_id.name)"
        />

        <report
            id="action_report_termination_holidays_n1"
            model="hr.payslip"
            string="Termination Holidays Previous Year"
            report_type="qweb-pdf"
            name="l10n_be_hr_payroll.report_termination_holidays_n1"
            file="l10n_be_hr_payroll.report_termination_holidays"
            print_report_name="'Termination Holidays N-1 - %s' % (object.employee_id.name)"
        />

        <report
            id="action_report_individual_account"
            model="hr.employee"
            string="Individual Account"
            report_type="qweb-pdf"
            name="l10n_be_hr_payroll.report_individual_account"
            file="l10n_be_hr_payroll.report_individual_account"
            print_report_name="(object._get_report_base_filename())"
        />
        <record id="action_report_individual_account" model="ir.actions.report">
            <field name="paperformat_id" ref="l10n_be_hr_payroll.paperformat_individual_account"/>
            <field name="binding_model_id" eval="False"/>
        </record>
</odoo>
